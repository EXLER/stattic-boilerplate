{
  "name": "stattic-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for building modern static websites with linting, templating, optimization & more!",
  "author": {
    "name": "Kamil Marut",
    "url": "https://github.com/EXLER"
  },
  "repository": "https://github.com/EXLER/stattic-boilerplate.git",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --config ./config/webpack.config.js",
    "start:dist": "cross-env NODE_ENV=production webpack-dev-server --config ./config/webpack.config.js && http-server ./dist -o",
    "lint:js": "eslint --fix \"src/**/*.js\"",
    "lint:styles": "stylelint --fix \"src/**/*.scss\"",
    "build": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.js"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.2.1",
    "cross-env": "^7.0.2",
    "css-loader": "^4.3.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "eslint-webpack-plugin": "^2.1.0",
    "file-loader": "^6.2.0",
    "handlebars": "^4.7.6",
    "handlebars-loader": "^1.7.1",
    "html-webpack-plugin": "^4.5.0",
    "http-server": "^0.12.3",
    "image-webpack-loader": "^6.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss-loader": "^3.0.0",
    "robotstxt-webpack-plugin": "^7.0.0",
    "sass": "^1.28.0",
    "sass-loader": "^9.0.3",
    "sitemap-webpack-plugin": "^0.8.1",
    "style-loader": "^1.3.0",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpackbar": "^4.0.0"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  }
}
